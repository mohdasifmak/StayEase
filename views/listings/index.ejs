<!-- views/listings/index.ejs -->
<% layout("/layouts/boilerplate") %>

<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 3rem;
        margin-top: 1rem;
    }
    .filter {
        text-align: center;
        opacity: 0.8;
        cursor: pointer;
    }
    .filter:hover {
        opacity: 1.2;
    }
    .filter button {
        background: none;
        border: none;
        padding: 0;
        cursor: pointer;
        text-align: center;
    }

    .tax-info{
        display: none;
    }


    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 2rem;
        padding: 0.5rem;
        margin-left: 5rem;
        display: flex;
        align-items: center;
    }
</style>

<div id="filters">
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Rooms">
        <button type="submit">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </button>
    </form>
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Farms">
        <button type="submit">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
        </button>
    </form>
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Beach">
        <button type="submit">
            <div><i class="fa-duotone fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </button>
    </form>
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Lake">
        <button type="submit">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Lake</p>
        </button>
    </form>
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Camping">
        <button type="submit">
            <div><i class="fa-duotone fa-solid fa-mountain-sun"></i></div>
            <p>Camping</p>
        </button>
    </form>
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Iconic City">
        <button type="submit">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic City</p>
        </button>
    </form>
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Towers">
        <button type="submit">
            <div><i class="fa-solid fa-gopuram"></i></div>
            <p>Towers</p>
        </button>
    </form>
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Castles">
        <button type="submit">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </button>
    </form>
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Pools">
        <button type="submit">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Pools</p>
        </button>
    </form>
    <form class="filter" action="/listings/filter" method="get">
        <input type="hidden" name="category" value="Top Cities">
        <button type="submit">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Top Cities</p>
        </button>
    </form>


    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
        </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" id="listingsContainer">
    <% for(let listing of allListings) { %>
        <a class="cardLink" href="/listings/<%= listing._id %>">
        <div class="card col card-listing">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text"><b><%= listing.location %>, <%= listing.country %></b> <br />
                Hosted By <%= listing.owner.name %>
                <br>
                &#8377; <b><%= listing.price.toLocaleString("en-In") %></b> / night 
                <i class="tax-info"> +18% GST</i>
                </p>
            </div>
        </div>
        </a>
    <% } %> 
</div>
     

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");

    taxSwitch.addEventListener("click", ()=>{
        let taxInfo = document.getElementsByClassName("tax-info");

        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }else{
                info.style.display = "none";
            }
        }
    })
</script>